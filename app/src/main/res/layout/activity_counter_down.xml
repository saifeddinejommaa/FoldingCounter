<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CounterDownActivity">

    <com.jommaa.counterwidget.CounterDownView
        android:id="@+id/counterDownView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/background_dark"
        app:digitBackgroundColor="@color/colorPrimary"
        app:digitTextColor="@color/colorAccent"
        app:digitTextSize="20sp"
        app:digitspringColor="#ffffff"
        app:withtext="false" />


</RelativeLayout>